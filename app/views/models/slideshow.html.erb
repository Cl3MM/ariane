<%= javascript_include_tag "/assets/themes/classic/galleria.classic.js" %>

<div class="central-nav">
  <ul class="nav nav-pills">
    <% Category.all.each do |category|  %>
      <li <%= raw('class="active"') if @category.id == category.id %> >
        <%= link_to category.name, category_path(category) %>
      </li>
    <% end -%>
  </ul>
</div>
<hr />
<%= model_info @model %>
<br />
<% if @photos.empty? %>
  <div class="hero-unit">
    <h2>Sorry, no photos yet :(</h2>
    <hr />
    <p>This models does not have any photos yet. </p>
    <p>Please try again later, or <%= mail_to "contact@ariane.rw", "contact the administrator" %> if you still encounter this issue.</p>
  </div>
<% else %>
  <div id="galleria">
    <% @photos.each_with_index do |photo, index| %>
        <a href="<%= photo.image.url(:large) %>">
          <%= image_tag photo.image.url(:thumb) %>
        </a>
    <% end -%>
  </div>
<% end -%>
