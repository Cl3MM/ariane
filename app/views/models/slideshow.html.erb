<% css 'jquery.ad-gallery.css' %>
<% javascript 'ad_gallery.js', 'jquery.ad-gallery.js', 'jquery.ad-gallery.pack.js' %>

<div class="central-nav">
  <ul class="nav nav-pills">
    <% Category.all.each do |category|  %>
      <li <%= raw('class="active"') if @category.id == category.id %> >
        <%= link_to category.name, category_path(category) %>
      </li>
    <% end -%>
  </ul>
</div>
<hr />
<%= model_info @model %>
<hr />
<% if @photos.empty? %>
  <div class="hero-unit">
    <h2>Sorry, no photos yet :(</h2>
    <hr />
    <p>This models does not have any photos yet. </p>
    <p>Please try again later, or <%= mail_to "contact@ariane.rw", "contact the administrator" %> if you still encounter this issue.</p>
  </div>
<% else %>
  <div id="gallery" class="ad-gallery">
    <div class="ad-image-wrapper">
    </div>
    <div class="ad-controls">
    </div>
    <div class="ad-nav">
      <div class="ad-thumbs">
        <ul class="ad-thumb-list">
          <% @photos.each_with_index do |photo, index| %>
            <li>
              <a href="<%= photo.image.url %>">
                <%= image_tag photo.image.url(:thumb), :class => "image#{index}",
                  :title => "",
                  :longdesc => "",
                  :alt => "" %>
              </a>
            </li>
          <% end -%>
        </ul>
      </div>
    </div>
  <% end -%>
