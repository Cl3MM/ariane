<div class="page-header">
  <h1>
    <%= t ".title" %>
    <%= link_to 'Create a new Category', new_administration_category_path, :class => 'btn btn-primary pull-right' %>
  </h1>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= t ".ID" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".created_at" %></th>
      <th><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= link_to category.name, administration_category_path(category) %></td>
        <td><%= category.created_at %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Edit', edit_administration_category_path(category), :class => 'btn btn-mini' %>
            <%= link_to 'Destroy', administration_category_path(category), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
