<%= form_for([:administration, @model, @photo], :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @model.errors.any? %>
    <div class="alert alert-error">
      <h4 class="alert-heading"><%= t ".err-form" %></h4>
      <a class="close" data-dismiss="alert">&times;</a>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.submit :submit %>
  </div>
<% end %>
