<div class="page-header">
  <h1>Colors
  <%= link_to 'Create a color', new_administration_color_path, :class => 'btn btn-primary pull-right' %>
</h1>
</div>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @colors.each do |color| %>
      <tr>
        <td><%= color.id %></td>
        <td><%= link_to color.name, administration_color_path(color) %></td>
        <td><%= color.created_at %></td>
        <td width="18%">
          <div class="btn-group">
            <%= link_to 'Edit', edit_administration_color_path(color), :class => 'btn btn-mini' %>
            <%= link_to 'Destroy', administration_color_path(color), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
